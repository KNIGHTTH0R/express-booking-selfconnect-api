{
  "title": "RoomType",
  "description": "Schema of an room type.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "rate_key": {
      "type": "string"
    },
    "room_type": {
      "type": "string"
    },
    "room_group": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [ "code", "name" ],
      "additionalProperties": true
    },
    "occupancy": {
      "type": "object",
      "properties": {
        "standard_persons": {
          "type": "integer"
        },
        "max_persons": {
          "type": "integer"
        },
        "max_adults": {
          "type": "integer"
        },
        "max_children": {
          "type": "integer"
        },
        "max_children_age": {
          "type": "integer"
        }
      },
      "required": [ "standard_persons", "max_persons", "max_adults", "max_children", "max_children_age" ],
      "additionalProperties": true
    },
    "final_price_at_booking": {
      "$ref": "price.json#"
    },
    "final_price_at_checkout": {
      "$ref": "price.json#"
    },
    "description": {
      "type": "string"
    },
    "rooms_available": {
      "type": "integer"
    },
    "partner_data": {
      "$ref": "partner-data.json#"
    },
    "line_items": {
      "type": "array",
      "items": {
        "$ref": "line-item.json#"
      }
    },
    "amenities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "value_adds": {
      "type": "array",
      "items": {
        "enum": [
          "FREE_BREAKFAST",
          "FREE_HALF_BOARD",
          "FREE_FULL_BOARD",
          "FREE_PARKING",
          "FREE_INTERNET",
          "FREE_ALL_INCLUSIVE"
        ]
      }
    },
    "photos": {
      "type": "array",
      "items": {
        "$ref": "photo.json"
      }
    },
    "payment_options": {
      "type": "array",
      "items": {
        "$ref": "payment-option.json#"
      }
    },
    "payment_methods": {
      "type": "array",
      "items": {
        "$ref": "payment-method.json#"
      }
    },
    "cancellation": {
      "$ref": "cancellation.json#"
    },
    "refundable": {
      "enum": [ "full", "partial", "none", "unknown" ]
    },
    "cancellation_policy": {
      "type": "string"
    },
    "cancellation_deadline": {
      "type": "string"
    },
    "occupancy_policy": {
      "type": "string"
    },
    "payment_policy": {
      "type": "string"
    },
    "other_policy": {
      "type": "string"
    }
  },
  "required": [
      "name",
      "final_price_at_booking",
      "final_price_at_checkout",
      "partner_data",
      "line_items",
      "occupancy"
  ],
  "additionalProperties": true
}